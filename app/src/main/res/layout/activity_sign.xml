<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    >
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button
            android:id="@+id/takephoto_sign_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="采集照片"
            android:background="@drawable/bt_shap"
            android:layout_margin="6dp"/>

        <Button
            android:id="@+id/upload_sign_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="上传照片"
            android:background="@drawable/bt_shap"
            android:layout_margin="6dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/depart_name_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="用户单位："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/depart_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:text="这里是用户单位"
            android:textSize="16sp"
            android:textColor="#666666" />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="45dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/emp_name_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="用户名称："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />
        <EditText
            android:id="@+id/emp_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:text="这里是用户名称"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="45dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/statusms_sign_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="用户状态："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />
        <EditText
            android:id="@+id/statusms_sign"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:text="这里是用户状态"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/sign_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/crop__button_text" />
</LinearLayout>
