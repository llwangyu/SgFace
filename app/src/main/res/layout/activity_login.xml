<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/login_ImageView1"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:src="@mipmap/icon_login" />
    <LinearLayout
        android:id="@+id/login_LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/login_LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- android:ems="10"表示EditText内最多只显示10个字符，超出不显示 -->
            <EditText
                android:id="@+id/login_telnum_et"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:drawableLeft="@drawable/user"
                android:ems="20"
                android:hint="@string/id_hint"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                android:textSize="18sp">

                <requestFocus />
            </EditText>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CACDD1" />

            <EditText
                android:id="@+id/login_smsyzm_et"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@null"
                android:drawableLeft="@drawable/password"
                android:ems="20"
                android:hint="@string/pwd_hint"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@android:color/black"
                android:textColorHint="#999999"
                android:textSize="18sp" />
        </LinearLayout>
        <Button
            android:id="@+id/login_btnLogin"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button_style"
            android:text="@string/login_btn_text"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sign_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/new_usr"
            android:textColor="#0079FF"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/login_txtForgotPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:text="施工会议签到-v1.04"
            android:textColor="#0079FF"
            android:textSize="10sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

</LinearLayout>
