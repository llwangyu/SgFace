<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    >
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button
            android:id="@+id/takephoto_face_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="现场拍照"
            android:background="@drawable/bt_shap"
            android:layout_margin="6dp"/>
        <Button
            android:id="@+id/sign_face_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="会议签到"
            android:background="@drawable/bt_shap"
            android:layout_margin="6dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="45dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/meetingname_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="会议名称："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/meetingname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:text="这里是会议名称"
            android:textSize="16sp"
            android:textColor="#666666" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="45dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/meetingdate_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="会议时间："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />
        <EditText
            android:id="@+id/meetingdate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:text="这里是会议时间"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="45dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/meetingaddress_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="会议地点："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/meetingaddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:text="这里是会议地点"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="103dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/meetingcontent_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="会议内容："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/meetingcontent"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:focusable="false"
            android:text="这是会议内容这里是会议内容这里是会议内容这里是会议内容这里是会议内容这里是会议内容这里是会议内容"
            android:textSize="16sp"
            android:textColor="#666666" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="83dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/statusms_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="签到状态："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />

        <EditText
            android:id="@+id/statusms"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:focusable="false"
            android:text="这里是签到状态"
            android:textSize="16sp"
            android:textColor="#666666" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="45dp" android:orientation="horizontal">
        <TextView
            android:id="@+id/ppl_l"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:text="相  似  度："
            android:textColor="#00AAFF"
            android:textSize="16sp"
            android:typeface="normal" />
        <EditText
            android:id="@+id/ppl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:text="这里是相识度"
            android:textSize="16sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/sign_face_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@color/crop__button_text" />

</LinearLayout>
